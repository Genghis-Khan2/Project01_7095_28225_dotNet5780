<UserControl x:Class="PLWPF.Admin_Windows.User_Controls.AdminHostUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.Admin_Windows.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid ShowGridLines="True" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" x:Name="Name" HorizontalAlignment="Center"/>
        <Label Grid.Column="1" x:Name="MailAddress" HorizontalAlignment="Center"/>
        <Label Grid.Column="2" x:Name="PhoneNumber" HorizontalAlignment="Center"/>
    </Grid>

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Remove"/>
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
