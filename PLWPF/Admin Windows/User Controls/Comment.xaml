<UserControl x:Class="PLWPF.Admin_Windows.User_Controls.Comment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.Admin_Windows.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="CommentBlock" FontSize="22"/>
    </Grid>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Fixed Issue" x:Name="IssueFixed" Click="IssueFixed_Click"/>
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
