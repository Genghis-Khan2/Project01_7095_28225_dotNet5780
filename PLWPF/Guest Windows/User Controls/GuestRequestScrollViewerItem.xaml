<UserControl x:Class="PLWPF.Guest_Windows.User_Controls.GuestRequestScrollViewerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.Guest_Windows.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" x:Name="NameTextBlock" Text="{Binding GuestName}" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" x:Name="KeyTextBlock" Text="{Binding Key}" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image Grid.Column="2" x:Name="StatusIconImage" Source="{Binding ImagePath}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
