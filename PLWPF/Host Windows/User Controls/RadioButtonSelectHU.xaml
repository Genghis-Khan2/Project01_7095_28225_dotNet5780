<Window x:Class="PLWPF.Host_Windows.User_Controls.RadioButtonSelectHU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.Host_Windows.User_Controls"
        mc:Ignorable="d"
        Title="Select Hosting Unit" Height="291" Width="234">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="2" Content="Order" VerticalAlignment="Stretch" FontWeight="ExtraBold" FontSize="17" Click="Button_Click"/>
        <TextBlock Grid.Row="0" Text="Chose Hosting Unit:" FontSize="16"></TextBlock>
        <ListBox Grid.Row="1" x:Name="RadioButtons">

        </ListBox>
    </Grid>
</Window>
