<UserControl x:Class="PLWPF.Host_Windows.User_Controls.HostOrderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF.Host_Windows.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="800">
    <Grid ShowGridLines="True" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" x:Name="HUKey" HorizontalAlignment="Center" FontSize="18"/>
        <Label Grid.Column="1" x:Name="GRKey" HorizontalAlignment="Center" FontSize="18"/>
        <Label Grid.Column="2" x:Name="Status" HorizontalAlignment="Center" FontSize="18"/>
    </Grid>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Remove" Click="MenuItem_Click"/>
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
