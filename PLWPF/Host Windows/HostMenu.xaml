<Window x:Class="PLWPF.HostMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="HostMenu" Height="450" Width="800">
    <Grid>
        <Button Content="Add a hosting unit" HorizontalAlignment="Left" Margin="32,31,0,0" x:Name="AddUnit" VerticalAlignment="Top" Click="AddUnit_Click"/>
        <TabControl Margin="261,0,0,0">
            <TabItem Header="Guest Requests">
                <Grid Background="White">
                    <ScrollViewer>
                        <StackPanel x:Name="GuestRequestStack"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Hosting Units">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button Content="Refresh" HorizontalAlignment="Left" x:Name="Refresh" Margin="206,21,0,0" VerticalAlignment="Top" Click="Refresh_Click"/>


    </Grid>
</Window>
