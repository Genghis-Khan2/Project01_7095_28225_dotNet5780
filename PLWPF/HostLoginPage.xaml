<Window x:Class="PLWPF.HostLoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:xctf="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="HostLoginPage" Height="450" Width="800">
    <Grid>
        <xctf:WatermarkTextBox FontSize="24" Watermark="Username" HorizontalAlignment="Left" Margin="281,174,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" Height="43"/>
        <xctf:WatermarkPasswordBox Watermark="Password" PasswordChar="*" FontSize="24" HorizontalAlignment="Left" Margin="281,252,0,0" VerticalAlignment="Top" Width="181" Height="40"/>
        <Label Content="Login to host account:" FontFamily="Baskerville Old Face" FontSize="36" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top"/>
        <Button Content="Login" FontSize="24" FontWeight="DemiBold" HorizontalAlignment="Left" Margin="312,332,0,0" VerticalAlignment="Top" x:Name="LoginButton" Height="37" Width="119" Click="LoginButton_Click"/>

    </Grid>
</Window>
